<Window x:Class="LottoGame.WelcomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LottoGame"
        mc:Ignorable="d"
        Title="LottoGame v1.0" Height="300" Width="350">
    <Grid Background="#FF252525">
        <TextBlock HorizontalAlignment="Center" Margin="0,66,0,0" TextWrapping="Wrap" Text="Nazwa użytkownika" VerticalAlignment="Top" Foreground="#FF797979" FontFamily="Bahnschrift" FontSize="24"/>
        <TextBox x:Name="UsernameField" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="212" Height="42" Background="{x:Null}" Margin="0,100,0,0" MaxLength="10" FontSize="28" Foreground="Gray"/>
        <Button Content="Graj" HorizontalAlignment="Center" Margin="0,196,0,0" VerticalAlignment="Top" Height="30" Width="106" Background="#FF797979" Foreground="#FF1D1D1D" FontSize="18" FontFamily="Bahnschrift" BorderBrush="#FF707070" Click="Button_Click" AutomationProperties.Name="PlayButton"/>

    </Grid>
</Window>
